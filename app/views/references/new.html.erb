<br>
<h3 class="subheading" style="padding-left: 240px">Add Reference</h3>
<br>
<br>
<div class="content-container">
  <%= form_for(@reference, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
      <div class="control-label col-sm-2">
          <%= f.label :body, "Add Your Reference" %>
      </div>
      <div class="col-sm-8">
          <%= f.text_area :body, class: "form-control", size: "20x15", placeholder: "Add Reference Here"%>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Add Reference", class: 'btn btn-primary btn-lg' %>
      </div>
  </div>
  <% end %>
</div>
