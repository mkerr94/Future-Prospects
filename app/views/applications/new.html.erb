<h1 align='center'>Your Application</h1>
<br>
<hr>

<div align='center'>
<h4>Choose Course</h4>
</div>

<hr>
<%= form_for(@application, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
      <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
              <%= f.collection_check_boxes :course_ids, Course.all, :id, :checkbox_name do |cb| %>
                  <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
              <% end %>
          </div>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Apply", class: 'btn btn-primary btn-lg'%>
      </div>
  </div>
  <div class="col-xs-offset-6">
      [ <%= link_to "Cancel", courses_path %> ]
  </div>
<% end %>
