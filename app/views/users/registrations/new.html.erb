<div class="content-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div id="example-basic">
        <h3>Personal Information</h3>
        <section>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field">
            <%= f.label :forename %><br />
            <%= f.text_field :forename, class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field">
            <%= f.label :surname %><br />
            <%= f.text_field :surname, class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field" style="width: 400px; height: 60px">
            <%= f.label :date_of_birth, "Date of Birth" %>
            <div class='input-group date' id='datetimepicker9'>
                <%= f.text_field :date_of_birth, class: "form-control"%>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar">
                    </span>
                </span>
            </div>
          </div>

          <div class="field">
            <%= f.label :perm_address, "Address" %><br />
            <%= f.text_area :perm_address, class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field">
            <%= f.label :perm_postcode, "Postcode" %><br />
            <%= f.text_field :perm_postcode, class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field">
            <%= f.label :phone_no %><br />
            <%= f.text_field :phone_no, class: "form-control", style: "width: 400px" %>
          </div>
        </section>
        <h3>Academic Information</h3>
        <section>
          <div class="field">
            <%= f.label :qualifications %><br />
            <%= f.text_area :qualifications, size: "90x15", placeholder: "Please use the following format:
            [Level] [Course] [Grade]. E.g:
            Higher English A
            Advanced Higher Physics B", class: "form-control" %>
          </div>

          <br>

          <div class="field">
            <%= f.label :highest_qualification_level %><br />
            <%= f.text_field :highest_qualification_level, class: "form-control", style: "width: 400px" %>
          </div>

          <div class="field">
            <%= f.label :highest_qualification_institution %><br />
            <%= f.text_field :highest_qualification_institution, class: "form-control", style: "width: 400px" %>
          </div>
        </section>
        <h3>Referee &amp; Personal Statement</h3>
        <section>
          <div class="field">
            <%= f.label :referee_id, "Enter the ID number of your referee" %><br />
            <%= f.number_field :referee_id, class: "form-control", style: "width: 400px" %>
          </div>

          <br>

          <div class="field">
            <%= f.label :personal_statement %><br />
            <%= f.text_area :personal_statement, size: "100x17", maxlength: 5000, id: 'personal_statement', class: "form-control" %> <br>


              Characters remaining: <span id="counter" data-maximum-length="5000">5000</span>

            <script>
                $(document).ready(function() {
                  var personal_statement = $("#personal_statement");
                  var counter     = $("#counter");
                  var max_length  = counter.data("maximum-length");

                  personal_statement.keyup(function() {
                      counter.text(max_length - $(this).val().length);
                  });

                });
            </script>
          </div>

        </section>
        <h3>Finish</h3>
        <section>
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-success btn-lg" %>
          </div>
        </section>
    </div>
  <% end %>
</div>

<script>
$("#example-basic").steps({
  headerTag: "h3",
  bodyTag: "section",
  transitionEffect: "slideLeft",
  autoFocus: true
});

$(function () {
    $('#datetimepicker9').datetimepicker({
      viewMode: 'years'
    });
});
</script>
