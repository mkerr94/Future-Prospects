<br><h3 class="subheading">Sign up Student</h3> <br>
<div class="content-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :forename %><br />
        <%= f.text_field :forename %>
      </div>

      <div class="field">
        <%= f.label :surname %><br />
        <%= f.text_field :surname %>
      </div>

      <div class="field">
        <%= f.label :perm_address %><br />
        <%= f.text_area :perm_address %>
      </div>

      <div class="field">
        <%= f.label :perm_postcode %><br />
        <%= f.text_field :perm_postcode %>
      </div>

      <div class="field">
        <%= f.label :term_address %><br />
        <%= f.text_area :term_address %>
      </div>

      <div class="field">
        <%= f.label :term_postcode %><br />
        <%= f.text_field :term_postcode %>
      </div>

      <div class="field">
        <%= f.label :phone_no %><br />
        <%= f.text_field :phone_no %>
      </div>

      <div class="field">
        <%= f.label :highest_qualification_level %><br />
        <%= f.text_field :highest_qualification_level %>
      </div>

      <div class="field">
        <%= f.label :highest_qualification_institution %><br />
        <%= f.text_field :highest_qualification_institution %>
      </div>

      <div class="field">
        <%= f.label :referee_id, "Enter the ID number of your referee" %><br />
        <%= f.number_field :referee_id %>
      </div>

      <div class="field">
        <%= f.label :personal_statement %><br />
        <%= f.text_area :personal_statement, size: "100x20", maxlength: 5000, id: 'personal_statement' %> <br>


          Characters remaining: <span id="counter" data-maximum-length="5000">5000</span>

        <script>
            $(document).ready(function() {
              var personal_statement = $("#personal_statement");
              var counter     = $("#counter");
              var max_length  = counter.data("maximum-length");

              personal_statement.keyup(function() {
                  counter.text(max_length - $(this).val().length);
              });

            });
        </script>
      </div>

      <br>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    <% end %> <br>

    <%= render "users/shared/links" %>
</div>
