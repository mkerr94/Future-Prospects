<h1 align='center'>Categories</h1>
<% if staff_signed_in? %>
    <p align='center'><%= link_to "New Category", new_category_path, class: "btn btn-primary" %></p>
<% end %>
<hr>
<div align='center'>
    <% @categories.each do |category| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="article-title">
                    <small><%= link_to "#{category.name}", category_path(category) %></small>
                </li>
                <li>
                    <%= pluralize(category.courses.count, "course") %>
                </li>
            </div>
        </div>
    </ul>
    <% end %>
</div>
