<!-- New category form -->
<h1 align='center'>New Category</h1>
<hr>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :name %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Name of category", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        <% end %>
        <div class="col-xs-offset-6">
            [ <%= link_to "Cancel", categories_path %> ]
        </div>
    </div>
</div>
