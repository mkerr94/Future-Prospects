<h1 align='center'><%= current_college.name %>'s Courses</h1>
<hr>
<br>
<div align='center'>
  <div style='width: 400px'>
    <% @college_courses.each do |course| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= course.title %></h3>
      </div>
      <div class="panel-body">
        <%= link_to "View Details", course_path(course)%>  | 
        <%= link_to "View Applications", {:controller => "courses", :action => "course_applications", :course => course.id }%>
      </div>
    </div>
    <% end %>
  </div>
</div>
