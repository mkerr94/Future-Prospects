<h1 align='center'><%= current_college.name %>'s Courses</h1>
<hr>
<br>
<div align='center'>
  <div style='width: 400px'>
    <% @college_courses.each do |course| %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to "#{course.title}", course_path(course) %></h3>
      </div>
      <div class="panel-body">
        <%= course.description %>
      </div>
    </div>
    <% end %>
  </div>
</div>
