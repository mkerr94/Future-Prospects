<h3 class="subheading">Sign Up College</h3>

<br>
<br>

<div class="content-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", style: "width: 400px" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", style: "width: 400px" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", style: "width: 400px" %>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control", style: "width: 400px" %>
      </div>

      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_area :address, class: "form-control", style: "width: 400px" %>
      </div>

      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, class: "form-control", style: "width: 400px"%>
      </div>

      <div class="field">
        <%= f.label :phone_no %><br />
        <%= f.text_field :phone_no, class: "form-control", style: "width: 400px"%>
      </div>

      <br>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    <% end %>

    <br>

    <%= render "colleges/shared/links" %>
</div>
