<h1 align='center'>
    Courses
</h1>

<br>

<% if user_signed_in? %>
    <p align='center'><%= link_to "Create new course", new_course_path, class: "btn btn-primary" %></p>
<% end %>

<hr>
<br>

<% @courses.each do |course| %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div align='center'>
                    <p class="course-title">
                        <%= link_to course.title, course_path(course) %>
                    </p>
                    <br>
                    <p>
                        <%= course.description %>
                    </p>
                    <% if user_signed_in? %>
                        <div class="course-actions">
                            <%= link_to "Edit", edit_course_path(course), class: 'btn btn-xs btn-primary' %>
                            <%= link_to "Delete", course_path(course), method: :delete,
                                            data: {confirm: 'Are you sure you want to delete the course?'},
                                            class: 'btn btn-xs btn-danger' %>
                        </div>
                    <% end %>

                </div>
            </div>
        </div>
    </div>


<% end %>
