<div class="row">
    <div class="col-xs-12">
        <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <% if @course.errors.any? %>
    <div id="error_explanation" class="content-container">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :title %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of course", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-offset-2 col-sm-8">
                    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :description %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :description, rows:10, class: "form-control", placeholder: "Description of course"%>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :requirements %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :requirements, rows:10, class: "form-control", placeholder: "Additional Requirements"%>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :curriculum %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :curriculum, rows:10, class: "form-control", placeholder: "Course Curriculum"%>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        <% end %>
        <div class="col-xs-offset-6">
            [ <%= link_to "Cancel", courses_path %> ]
        </div>
    </div>
</div>
